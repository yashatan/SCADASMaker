<Window x:Class="SCADACreator.View.TablePageSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCADACreator.View"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:s="clr-namespace:SCADACreator"
        Title="Table Page Setting Window"
        WindowStartupLocation="CenterScreen"
        Height="450"
        Width="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <!--Title-->
        <Grid Grid.Row="0"
              VerticalAlignment="Top"
              Height="40"
              Background="Blue">
            <TextBlock Text="Table Page Setting"
                       Foreground="White"
                       FontSize="30"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"></TextBlock>
        </Grid>
        <ListView HorizontalContentAlignment="Stretch"
                  ScrollViewer.VerticalScrollBarVisibility="Visible"
                  x:Name="lvTablePage"
                  Grid.Row="1"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ScrollViewer.CanContentScroll="False">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <materialDesign:Card Cursor="Hand"
                                         Height="35"
                                         Margin="0 10 0 0">
                        <Grid>
                            <StackPanel Height="20"
                                        HorizontalAlignment="Left"
                                        Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}"
                                           Width="300"
                                           HorizontalAlignment="Left"
                                           TextTrimming="CharacterEllipsis"
                                           TextWrapping="NoWrap"
                                           Margin="20 0 0 0"></TextBlock>
                            </StackPanel>
                            <StackPanel Height="20"
                                        HorizontalAlignment="Right"
                                        Orientation="Horizontal">
                                <!--Detail button-->
                                <Button Margin="0 0 0 0"
                                        HorizontalAlignment="Right"
                                        BorderBrush="Transparent"
                                        Click="DetailButton_Click"
                                        ToolTip="Chi tiết"
                                        Background="Transparent">
                                    <materialDesign:PackIcon Kind="DotsVertical"
                                                             Height="21"
                                                             Width="20"></materialDesign:PackIcon>
                                    <!--No blue Background when mouse hover-->
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Grid Background="{TemplateBinding Background}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center" />
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}"
                                                             Value="True">
                                                    <Setter Property="Foreground"
                                                            Value="Blue" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <!--Delete Button-->
                                <Button Margin="0 0 20 0"
                                        Grid.Column="2"
                                        HorizontalAlignment="Right"
                                        Click="DeleteButton_Click"
                                        BorderBrush="Transparent"
                                        ToolTip="Xoá"
                                        Background="Transparent">
                                    <materialDesign:PackIcon Kind="DeleteCircle"
                                                             Height="20"
                                                             Width="20"></materialDesign:PackIcon>
                                    <!--No blue Background when mouse hover-->
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Grid Background="{TemplateBinding Background}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center" />
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}"
                                                             Value="True">
                                                    <Setter Property="Foreground"
                                                            Value="Blue" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="true">
                            <Setter Property="IsSelected"
                                    Value="True" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <Button Grid.Row="2"
                HorizontalAlignment="Right"
                BorderBrush="Transparent"
                Cursor="Hand"
                Margin="0 0 60 10"
                VerticalAlignment="Bottom"
                Click="btnAdd_Click"
                Background="Transparent">
            <materialDesign:PackIcon Kind="PlusCircle"
                                     Height="50"
                                     HorizontalAlignment="Center"
                                     Cursor="Hand"
                                     Width="50"></materialDesign:PackIcon>
            <!--No blue Background when mouse hover-->
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Grid Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" />
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}"
                                     Value="True">
                            <Setter Property="Foreground"
                                    Value="Blue" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
