<Window x:Class="SCADACreator.View.TablePageSettingDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCADACreator.View"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="TablePageSettingWindow"
        Height="650"
        Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <!--Title-->
        <Grid Grid.Row="0"
              VerticalAlignment="Top"
              Height="40"
              Background="Blue">
            <TextBlock Text="Table Page Setting"
                       Foreground="White"
                       FontSize="30"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"></TextBlock>
        </Grid>
        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Top"
                        Grid.Row="1"
                        Height="40">
                <TextBlock Text="Name:"
                           FontSize="15"
                           Margin="20 0 0 0"
                           VerticalAlignment="Bottom"></TextBlock>
                <TextBox materialDesign:HintAssist.Hint="Name"
                         x:Name="txtName"
                         FontSize="15"
                         Margin="10 0 0 0"
                         VerticalAlignment="Bottom"
                         Style="{StaticResource MaterialDesignTextBox}" />
            </StackPanel>
            <TextBlock Text="Tag list:"
                       FontSize="15"
                       Margin="20 0 0 0"
                       VerticalAlignment="Bottom"></TextBlock>
        </StackPanel>
        <ListView x:Name="lvTags"
                  HorizontalAlignment="Stretch"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  Grid.Row="2">
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="true">
                            <Setter Property="IsSelected"
                                    Value="True" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name"
                                    Width="auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"
                                           MinWidth="120"
                                           HorizontalAlignment="Center"
                                           Width="Auto" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Device"
                                    Width="170">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ConnectDevice.Name}"
                                           HorizontalAlignment="Center"
                                           MinWidth="120"
                                           Width="Auto" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Address"
                                    Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding MemoryAddress}"
                                           HorizontalAlignment="Center"
                                           MinWidth="120"
                                           Width="Auto" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header=""
                                    Width="auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button BorderBrush="Transparent"
                                        Background="Transparent"
                                        Click="btnDeleteTag_Click"
                                        Cursor="Hand">
                                    <materialDesign:PackIcon Kind="DeleteCircle"
                                                             Height="20"
                                                             Cursor="Hand"
                                                             Foreground="Black"
                                                             HorizontalAlignment="Center"
                                                             Width="20"></materialDesign:PackIcon>
                                </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
                
            </ListView.View>
            
        </ListView>
        <Button Grid.Row="3"
                HorizontalAlignment="Right"
                BorderBrush="Transparent"
                Cursor="Hand"
                Margin="0 0 70 30"
                x:Name="btnAdd"
                VerticalAlignment="Bottom"
                Click="btnAdd_Click"
                Background="Transparent">
            <materialDesign:PackIcon Kind="TagAdd"
                                     Height="50"
                                     HorizontalAlignment="Center"
                                     Cursor="Hand"
                                     Width="50"></materialDesign:PackIcon>
            <!--No blue Background when mouse hover-->
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Grid Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" />
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}"
                                     Value="True">
                            <Setter Property="Foreground"
                                    Value="Blue" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Grid Grid.Row="4">
            <Grid>
                <Button Height="40"
                        Width="100"
                        Foreground="White"
                        Background="Blue"
                        HorizontalAlignment="Right"
                        BorderBrush="Silver"
                        Content="Apply"
                        Margin="0 0 50 20"
                        Click="ApplyButton_Click"
                        x:Name="ApplyButton"></Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
